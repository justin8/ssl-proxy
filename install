#!/bin/bash
set -x

dir="$(dirname "$(readlink -f "$0")")"
name="$(basename "$dir")"
cd "$dir"
image_list="$(cat docker-compose.yml|grep -E '^\s+image:' | awk '{print $2}')"

if [[ $1 != '--fast' ]]; then
	for image in $image_list; do
		docker pull $image
	done
fi

portinus ensure "$name" --source "$dir"
